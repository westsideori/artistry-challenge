<% if flash[:errors_array] %>
    <% flash[:errors_array].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for @artist_instrument do |f| %>
    <%= f.label 'Artist:' %><br>
    <%= f.collection_select :artist_id, @artists, :id, :name %><br>
    <%= f.label 'Instrument:' %><br>
    <%= f.collection_select :instrument_id, @instruments, :id, :name %><br>
    <%= f.submit 'Add Instrument to Artist'%>
<% end %>