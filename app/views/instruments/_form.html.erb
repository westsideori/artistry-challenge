<% if flash[:errors_array] %>
    <% flash[:errors_array].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for @instrument do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :classification %><br>
    <%= f.text_field :classification%><br>
    <%= f.submit %>
<% end %>