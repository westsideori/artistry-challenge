<% if flash[:errors_array] %>
    <% flash[:errors_array].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for @artist do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :age %><br>
    <%= f.number_field :age, in: 1..100 %><br>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.submit %>
<% end %>